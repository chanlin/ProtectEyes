<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tx_eight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="第二节 挤按眼明穴"
        android:textColor="@color/blue37"
        android:textSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_eight_imgs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/graycc"
        android:overScrollMode="never">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/btn_Play"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_play"
        android:gravity="center"
        android:text="播放"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="眼保健操"
        android:textColor="@color/blue37"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="        在已设置好的时间钟，如刀休息时间，将播放眼保健操；关于眼保健操，根据中医经络理论，通过按摩穴位起到通经活络，改善眼部血液循环，以达到维护视力/防止近视的作用，对治疗假性近视也大有益处。"
        android:textColor="@color/gray2b"
        android:textSize="12sp" />
    <!--
    光线感应： 设置，显示， 自动调节亮度
    色温：


    -->

</LinearLayout>
